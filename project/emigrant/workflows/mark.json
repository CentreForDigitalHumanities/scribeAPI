{
  "name":"mark",
  "label":"Mark Workflow",
  "subject_fetch_limit":"10",
  "generates_subjects": true,
  "generates_subjects_for": "transcribe",

  "first_task":"determine_has_records",

  "tasks":{
    "determine_has_records":{
      "tool":"pickOne",
      "instruction":"Does this page have records?",
      "help": {
        "title": "Determining whether or not a page has records",
        "body": "Your first task is to determine whether or not the page you're looking at has any bank records at all.\nDo you see one or more filled-out \"Bond and Mortgage\" forms?"
      },
      "tool_config" : {
        "options":{
          "yes":{
            "label":"Yes",
            "next_task":"identify_records"
          },
          "no":{
            "label":"Nope",
            "next_task":"null_task"
          }
        }
      }
    },
    "identify_records":{
      "tool": "pickOneMarkOne",
      "instruction": "Pick a field and mark it with the corresponding marking tool.",
      "generates_subjects": true,
      "help": {
        "title": "Drawing boxes",
        "body": "Draw boxes around the indicated areas of the document"
      },
      "tool_config" : {
        "tools": [
          {"type": "rectangleTool", "label": "Records (rectangle)", "color": "green", "generates_subject_type": "em_record_rect"},
          {"type": "textRowTool", "label": "Records (row)",       "color": "blue",  "generates_subject_type": "em_record_row_tool"}
        ]
      },
      "next_task": null
    }
  }
}
