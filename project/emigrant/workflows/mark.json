{
  "name":"mark",
  "label":"Mark Workflow",
  "subject_fetch_limit":"10",
  "generates_subjects_for": "transcribe",
  "generates_new_subjects": true,
  "first_task":"determine_has_records",
  "tasks":{
    "determine_has_records":{
      "tool":"pickOne",
      "instruction":"Does this page have records?",
      "options":{
        "yes":{
          "label":"Yes",
          "next_task":"identify_records"
        },
        "no":{
          "label":"Nope",
          "next_task":"null_task"
        }
      }
    },
    "identify_records":{
      "tool": "pickOneMarkOne",
      "instruction": "Pick a field and mark it with the corresponding marking tool.",
      "generated_for_workflow" : "",
      "generates_subjects": true,
      "tools": [
        {"type": "rectangleTool", "label": "Records (rectangle)", "color": "green", "generates_subject_type": "em_record_rect"},
        {"type": "rectangleTool", "label": "Records (row)",       "color": "blue",  "generates_subject_type": "em_record_row_tool"}
      ],
      "next_task": null
    }
  }
}
