{
  "name": "transcribe",
  "label": "Transcribe Workflow",
  "retire_limit": 3,
  "generates_subjects": true,
  "generates_subjects_for": "verify",
  "generates_subjects_after": 3,
  "generates_subjects_max": 10,
  "generates_subjects_method": "collect-unique",

  "tasks": {


    "em_record_date": {
      "tool": "textTool",
      "tool_config": {},
      "instruction": "Enter the record date",
      "examples": ["1867 May 11", "1867 July 30", "1875 December 31"],
      "help": {
        "file": "t_record_date"
      },
      "generates_subject_type": "em_transcribed_date"
    },

    "em_record_number": {
      "tool": "numberTool",
      "tool_config": {},
      "instruction": "Enter the record number",
      "examples": ["287", "289"],
      "help": {
        "file": "t_record_date"
      },
      "generates_subject_type": "em_transcribed_record_number"
    },

    "em_record_mortgager": {
      "tool": "textTool",
      "tool_config": {
        "suggest": "common"
      },
      "instruction": "Enter the mortgager's name",
      "examples": ["John O'Meallia", "Trustees of St. Patrick's Cathedral"],
      "generates_subject_type": "em_transcribed_mortgager",
      "help": {
        "file": "t_record_mortgager"
      }
    },

    "em_record_street_address": {
      "tool": "textTool",
      "tool_config": {},
      "instruction": "Enter the street address",
      "examples": ["39 Mott St", "S. W. corner of 7th Avenue & 25th St. No 226 7th Avenue", "Mulberry, Mott and Prince St"],
      "generates_subject_type": "em_transcribed_address",
      "help": {
        "file": "t_record_street_address"
      }
    },

    "em_record_amount_loaned": {
      "tool": "numberTool",
      "tool_config": {},
      "instruction": "Enter the Amount Loaned",
      "examples": ["$4,500", "$50,000 and $30,000"],
      "generates_subject_type": "em_transcribed_amount_loaned",
      "help": {
        "file": "t_record_amount_loaned"
      }
    },

    "em_record_stories": {
      "tool": "numberTool",
      "tool_config": {},
      "instruction": "Enter the Number of Stories",
      "examples": ["2", "5"],
      "generates_subject_type": "em_transcribed_record_stories",
      "help": {
        "file": "t_record_stories"
      }
    },

    "em_record_material": {
      "tool": "textTool",
      "tool_config": {},
      "instruction": "Enter the building material",
      "examples": ["brick", "frame", "Brick & stone", "bk and frame"],
      "generates_subject_type": "em_transcribed_record_material",
      "help": {
        "file": "t_record_material"
      }
    },

    "em_record_valuation": {
      "tool": "compositeTool",
      "tool_config": {
        "tools": {
          "em_valuation_date": {
            "tool": "textTool",
            "examples": ["1879 November"],
            "tool_config": {"suggest": "common"},
            "label": "Date"
          },
          "em_valuation_ground": {
            "tool": "textTool",
            "examples": ["$200,000"],
            "tool_config": {},
            "label": "Ground Value"
          },
          "em_valuation_building": {
            "tool": "textTool",
            "examples": ["$200,000"],
            "tool_config": {},
            "label": "Building Value"
          },
          "em_valuation_amount": {
            "tool": "textTool",
            "examples": ["$200,000"],
            "tool_config": {},
            "label": "Total Valuation"
          }
        }
      },

      "help": {
        "file": "t_record_valuation"
      },
      "generates_subject_type": "em_transcribed_valuation",
      "instruction": "Enter as they appear, the date and amounts of the last property valuation that was recorded.",
      "next_task": null
    },

      "em_record_survey": {
          "tool": "compositeTool",
          "tool_config": {
            "tools": {
              "em_survey_dimensions": {
                "tool": "textTool",
                "examples": ["100 x 100"],
                "tool_config": {"suggest": "common"},
                "label": "Record Dimensions"
              },
              "em_survey_description": {
                "tool": "textTool",
                "examples": ["68 x 100 Frame Edifice with Slate roof and brick basement."],
                "tool_config": {},
                "label": "Building Description"
              }
            }
          },

          "help": {
            "file": "t_survey"
          },
          "generates_subject_type": "em_transcribed_survey",
          "instruction": "Enter as they appear, the building dimensions and description that was recorded.",
          "next_task": null
        }
  }
}
