{
  "name":"mark",
  "label":"Mark Workflow",
  "subject_fetch_limit":"10",
  "generates_new_subjects": true,
  "generate_new_subjects_at_classification_count": 1,
  "enables_workflows":{
  },
  "first_task":"records_present",
  "tasks":{
    "records_present":{
      "order":0,
      "tool":"pickOne",
      "instruction":"Are there any records to transcribe in this document?",
      "options":{
        "yes":{
          "label":"Yes",
          "next_task":"mark_records_for_transcription"
        },
        "no":{
          "label":"No",
          "next_task": null
        }
      }
    },
    "mark_records_for_transcription":{
      "generate_subjects": true,
      "tool":"mark",
      "instruction":"Pick a tool and mark each record:",
      "tools": [
        {"type": "pointTool", "label": "Point Tool", "color": "red"},
        {"type": "rectangleTool", "label": "Drawing/Note", "color": "green"},
        {"type": "textRowTool", "label": "Journal Entry", "color": "blue"}
      ],
      "next_task": null
    }
  }
}
