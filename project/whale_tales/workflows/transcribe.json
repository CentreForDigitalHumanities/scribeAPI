{
  "name": "transcribe",
  "label": "Transcribe Workflow",
  "retire_limit": 3,
  "generates_subjects": true,
  "generates_subjects_for": "verify",
  "generates_subjects_after": 3,
  "generates_subjects_max": 10,
  "generates_subjects_method": "collect-unique",

  "tasks": {

    "transcribe_point": {
      "tool": "compositeTool",
      "tool_config": {
        "tools": {
          "em_valuation_date": {
            "tool": "textTool",
            "tool_config": {},
            "label": "Date"
          },
          "em_valuation_amount": {
            "tool": "textTool",
            "tool_config": {},
            "label": "Amount"
          }
        },
        "generates_subject_type": "verify_point"
      },
      "instruction": "Transcribe this point."
    },
    "transcribe_rectangle": {
      "tool": "textTool",
      "tool_config": {},
      "instruction": "Transcribe this rectangle.",
      "next_task": "entry_date",
      "generates_subject_type": "verify_rectangle"

    },
    "transcribe_text_row": {
      "tool": "textTool",
      "tool_config": {},
      "instruction": "Transcribe this text row.",
      "next_task": "entry_date",
      "generates_subject_type": "verify_text_row"

    },

    "entry_date": {
      "tool": "textTool",
      "tool_config": {},
      "instruction": "What is the entry date?",
      "next_task": "page_number"
    },
    "page_number": {
      "tool": "textTool",
      "tool_config": {},
      "instruction": "What is the page number?",
      "next_task": "location"
    },
    "location": {
      "tool": "textTool",
      "tool_config": {},
      "instruction": "What is the location?",
      "next_task": "entry_text"
    },
    "entry_text": {
      "tool": "textTool",
      "tool_config": {},
      "instruction": "Please transcribe the remainder of the highlighted entry.",
      "next_task": null
    }
  }
}
