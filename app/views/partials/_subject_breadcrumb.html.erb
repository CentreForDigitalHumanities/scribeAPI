<%
  links = []
  links << {label: 'Subjects', url: admin_subjects_path}

  parents = []
  s = subject
  while ! (s = s.parent_subject).nil?
    parents.unshift s
  end

  parents.each do |p|
    links << {label: p, url: admin_subject_path(p)}
  end

  links << {label: subject}
%>
<%= render partial: 'partials/breadcrumb', locals: {links: links} %>
