.main-header
  display: flex
  flex-wrap: wrap
  justify-content: space-between
  height 40px

.main-header-group
  position: fixed
  top 0px
  width 100%
  background: rgba(0,0,0,0.75)

  display: flex
  flex-direction: row
  flex-wrap: wrap
  border: 0 solid rgba(FOREGROUND, 0.5)
  border-bottom-width: 1px
  border-right-width: 1px
  z-index 10
  
  &:empty
    flex: 1

  // disable selecting text
  -webkit-touch-callout none
  -webkit-user-select none
  -khtml-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none

.main-header-item
  @extends $reset-button
  align-items: center
  background: rgba(MAIN_HIGHLIGHT, 0)
  color: MAIN_HIGHLIGHT
  cursor: normal
  display: flex
  padding: 0.5rem 1.5vw 0.2em
  white-space: nowrap
  border-right: 1px solid rgba(FOREGROUND, 1.0)
  // &:not(:last-child)
  //   border-right: 1px solid rgba(FOREGROUND, 0.85)
    
  &:hover
    background: rgba(MEDIUM_GRAY, 0.5)

  &.logo
    font-size: 1.3em
    letter-spacing: 0.05em
    line-height: 1
    text-transform: uppercase

  &.selected
    background: rgba(MEDIUM_GRAY, 0.5)

  > a
    color: inherit
    text-decoration: none    
    
a.main-header-item
  box-shadow: 0 0 0 inset
  transition: box-shadow 0.2s
  text-transform: capitalize

  &[data-active]
    box-shadow: 0 -3px 0 inset

.account-bar-avatar
  border-radius: 50%
  height: 3rem
  margin: -1.5rem 0 -1.5rem 1vw
  position: relative
  width: 3rem

.login
  padding: 0.5rem 1.5vw 0.2em
  color rgba(255, 255, 255, 0.4)

  &:hover
    color #fff

  .options
    width 100px
    display inline-block
    padding-left 6px

    a
      margin-right 5px
      display inline-block
      width 18px
      height 18px
      line-height 18px
      font-size 12px
      text-align center
      color #000
      background none repeat scroll 0 0 rgba(255, 255, 255, 0.4)
      border-radius 50%

      &:hover
        color #fff
