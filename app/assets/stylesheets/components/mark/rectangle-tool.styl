.rectangle-tool

  // BUTTON STYLES
  .resize-button
    cursor grab
    cursor -webkit-grab
    &:active
      cursor grabbing
      cursor -webkit-grabbing

  .delete-button
    cursor pointer

  .mark-button
    cursor pointer

  // SHAPE STYLES
  .tool-shape
    cursor grab
    cursor -webkit-grab

    stroke-width 5
    stroke rgba(100,100,0,0.3)
    fill transparent

    &:active
      cursor grabbing
      cursor -webkit-grabbing

    // mark has not yet been transcribed
    &.transcribable
      stroke rgb(67, 187, 253)

    // mark is committed and uneditable
    &.committed
      cursor default

    // mark has not yet been committed
    &.uncommitted
      stroke #fc5424
