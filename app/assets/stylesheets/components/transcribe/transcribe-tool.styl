.transcribe-tool
  position absolute
  // width 400px
  // left 240px
  // top 75%
  min-width 200px
  background-color rgba(255,255,255,0.75)
  box-shadow 0 0 5px 3px rgba(0,0,0,.4)
  border-radius 6px
  line-height 2em
  cursor move

  .left
    padding-bottom 0.8em

    // background-color rgb(20,100,20)
    // float left
    input
      float left
      margin-left 10px
      outline none
    .input-field
      display none // auto hide
      input
        // text-transform uppercase
        width 80%
        display block
        margin-left 10px
        margin-right 10px
      label
        display inherit
        margin-left 10px
        margin-right 10px
        margin-top 10px
        margin-bottom 10px
        color black
        text-align left

      &.active
        display block
      textarea
        font-family COURIER
        font-size 1em
        resize none
        width 400px
        height 140px
        background-color #000
        padding 10px
        outline none
        color #fff
        border none
        //border-top-left-radius 6px
        margin-left 10px
        margin-right 10px
        opacity 0.5
        &:focus
          opacity 1.0
  &.composite
    .left

      .input-field
        label
          display block
          clear left
          padding-top 0.8em
          line-height 1.4em

  .right

    line-height 4em
    margin-right 10px
    float right

  .button
    outline none
    @extends $button
    color #fff
    border-radius 4px
    padding 5px
    margin 2px
    // width 140px
    width auto
    height 30px
    text-decoration none
    font-size 12px
    // border 2px solid #fff
    cursor pointer
    opacity 0.75
    &.prev
      background-color blue
    &.next
      background-color red
    &.done
      background-color green
