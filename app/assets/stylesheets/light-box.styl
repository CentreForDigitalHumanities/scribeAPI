.light-box-area
  height: 100%
  // background-color: #121215
  // float left
  width: 150px
  flex-shrink 0
  margin-left 10px

  // prevent highlighting/selecting
  -webkit-touch-callout none
  -webkit-user-select none
  -khtml-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none

  transition margin 0.2s

  &.folded
    transition margin 0.2s
    margin-left -120px

  .carousel
    position fixed
    width inherit
    // width: 10%
    // min-width 150px
    background-color black
    align-item: center
    background-color: #cbcbcb

  #visibility-button
    line-height: 2;
    background-color:  #ffffff;
    width: 100%;
    height: 25px;
    font-family: ProximaNova;
    font-size: 14px;
    color: #3f5765
    font-weight: 400;
    text-align: center;
    border-bottom: solid 3px #3f5765;
    cursor: pointer;
    span
      padding: 8%
    svg:hover path
      fill: rgba(63,87,101,1)

    #questions-tip
      vertical-align: text-top;

  .action-button-next
    padding: 0;
    background-color:  #ffffff;
    border-top: solid 3px #3f5765
    height: 30px
    line-height: 2;
    color: #3f5765
    border-radius 0
    text-align center
    font-weight: 400;
    width: 49%
    top: 0px;
    margin: 0px;
    position: relative;
    opacity: 1;
    &:hover
      background-color: #cdcdcd;
    a
      text-decoration:none
      padding: 10%;
      color: #3f5765

  .action-button-back
    border-right: solid 3px #3f5765;
    border-top: solid 3px #3f5765
    background-color: #ffffff;
    padding: 0;
    height: 30px
    line-height: 2;
    color: #3f5765
    border-radius 0
    text-align center
    font-weight: 400;
    width: 49%
    top: 0px;
    margin: 0px;
    position: relative;
    opacity: 1;
    &:hover
      background-color: #cdcdcd;
    a
      text-decoration:none
      padding: 10%;
      color: #3f5765

  #image-list
    cursor pointer
    opacity 1
    transition opacity 1s
    &.disabled
      transition opacity 1s
      cursor not-allowed
      opacity 0.25

  ul
    padding-left 0
    list-style none
    align-items: center

    li
      transition border 0.2s, background 0.3s
      border-style: solid;
      border-width: 3px;
      border-color: rgba(0,0,0,0);
      background-color: black
      margin: 4%;
      align-items: center
      width: 125px
      border-radius: 12px;
      cursor: inherit;
      &.active
        transition border 0.2, background 0.3s
        border-style: solid;
        border-width: 3px;
        border-color:  #50afff;
        background-color: #9BD1FF

      &:hover
        border-style: solid;
        border-width: 3px;
        border-color: #fff;

      span
        border-bottom-right-radius: 8px;
        border-top-left-radius: 8px
        border-style: solid;
        border-width: 3px;
        border-color:  #ffffff;
        float: left;
        color: #3f5765
        background-color:  #ffffff;
        width: 20px;
        height: 20px;
        text-align: center;
