.light-box-area
  height: 100%
  background-color: #121215
  float left
  margin-top: 3em

  .carousel
    position fixed
    width: 10%
    min-width 150px
    background-color black
    align-item: center
    background-color: #cbcbcb

  #visibility-button
    line-height: 2;
    background-color:  #ffffff;
    width: 100%;
    height: 30px;
    font-family: ProximaNova;
    color: #3f5765
    font-size: 16px;/* Approximation due to font substitution */
    font-weight: 400;
    text-align: center;
    border-bottom: solid 3px #3f5765;

    &:hover
      background-color: #cdcdcd;


  .action-button-next
    padding: 0;
    background-color:  #ffffff;
    border-top: solid 3px #3f5765 
    height: 30px
    line-height: 2;
    color: #3f5765
    border-radius 0
    text-align center
    width: 49%
    top: 0px;
    margin: 0px;
    position: relative;
    opacity: 1;
    &:hover
      background-color: #cdcdcd;
    
  .action-button-back
    border-right: solid 3px #3f5765;
    border-top: solid 3px #3f5765 
    background-color: #ffffff;
    padding: 0;
    height: 30px
    line-height: 2;
    color: #3f5765
    border-radius 0
    text-align center
    width: 49%
    top: 0px;
    margin: 0px;
    position: relative;
    opacity: 1;
    &:hover
      background-color: #cdcdcd;

  ul
    padding-left 0
    list-style none
    align-items: center

    li
      transition border 0.3s, background 0.3s
      border-style: solid;
      border-width: 3px;
      border-color: #cbcbcb;
      background-color: black
      margin: 4%;
      align-items: center
      width: 125px
      border-radius: 8px;
      &.active
        transition border 0.3s, background 0.3s
        background-color: #3A3A3A
        border-style: solid;
        border-width: 3px;
        border-color:  #ffffff;
        background-color:  #000000;

      &:hover
        border-style: solid;
        border-width: 3px;
        border-color: #3f5765;

      span
        border-bottom-right-radius: 8px;
        border-top-left-radius: 4px
        border-style: solid;
        border-width: 3px;
        border-color:  #ffffff;
        float: left;
        color: #3f5765
        background-color:  #ffffff;
        width: 20px;
        height: 20px;
        text-align: center;

    





