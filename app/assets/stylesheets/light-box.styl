.light-box-area
  background-color: #121215
  float left
  margin-top: 3em

  .carousel
    position fixed
    width 200px
    background-color black

  .action-button
    top 0px
    margin 0px
    position: relative
    // margin-bottom: 1.5em
    width: 70%
    opacity: 1.0
  ul
    padding-left 0
    list-style none
    // text-align left

    li
      transition border 0.3s, background 0.3s
      border 1px solid rgba(0,0,0,0)
      &.active
        transition border 0.3s, background 0.3s
        background-color: #3A3A3A
      &:hover
        border 1px solid MEDIUM_GRAY
