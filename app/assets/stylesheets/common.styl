BACKGROUND = white
FOREGROUND = #333
MAIN_HIGHLIGHT = #f60
MEDIUM_GRAY = #555

SANS_SERIF = Montserrat, "Gill Sans", Arial, sans-serif
SERIF = "Playfair Display", Georgia, serif
COURIER = "Courier New", Courier, monospace

html
  background: MEDIUM_GRAY
  color: white
  font: 14px/1.5 "Helvetica Neue", Arial, sans-serif

body
  margin: 0

h1
  font-weight: 100
  font-size: 64px
  line-height: 1

h2
  font-weight: 100
  font-size: 36px
  line-height: 1

h3
  font-weight: normal
  letter-spacing: 2px
  text-transform: uppercase

hr
  border: 1px solid
  border-width: 1px 0 0 0
  color: inherit

a
  color: lime

.readymade-site-background
  background-image: url("background.jpg")
  background-color: MEDIUM_GRAY
  background-position: 50% 33%
  background-size: cover
  bottom: 0
  left: 0
  opacity: 1 //0.33
  position: fixed
  right: 0
  top: 0
  transition: opacity 0.5s
  z-index: -1

  [data-location-hash="#/"] &
    opacity: 1

.readymade-site-background-effect
  background:
    radial-gradient(rgba(MEDIUM_GRAY, 0), black),
    url("black-pixel-screen.png")
  bottom: 0
  left: 0
  opacity: 1
  position: absolute
  right: 0
  top: 0
  transition: opacity 1s

  [data-location-hash="#/"] &
    opacity: 1

.readymade-main-stack
  margin: 20px auto
  width: 90vw

  [data-location-hash="#/"] &
    margin-top: 45vh

background-stripes(color1, color2, size)
  background: linear-gradient(-45deg, color1 25%, color2 25%, color2 50%, color1 50%, color1 75%, color2 75%)
  background-size: size size

$reset-button
  background: transparent
  border: 0
  color: inherit
  cursor: pointer
  font: inherit
  line-height: inherit
  margin: 0
  padding: 0
  text-decoration: none

$text-input
  border: 1px solid gray
  box-shadow: 0 1px 3px rgba(black, 0.2) inset
  box-sizing: border-box
  font: inherit
  padding: 0.1em 0.5vw

  &.full
    width: 100%

-webkit-font-smoothing antialiased

body
  font-family: 'Ubuntu', sans-serif

h1
  color #426262
  font-weight 400
  font-size 3em
  
.page-content
  background-color #000
  opacity 0.7
  margin 100px 100px
  border-radius 12px
  padding 20px
  min-width 250px
  line-height 1.8em

  h1
    margin-top 0

$button
  border-radius 5px
  padding 12px 20px
  width 140px
  font-weight bold
  font-size 12px
  border 2px solid transparent
  cursor pointer
  opacity 0.75
  color #000
  &.yellow
    background-color yellow
  &.red
    background-color red
  &.blue
    background-color blue
  &.white
    background-color #fff
  &.green
    background-color #693
  &.disabled
    opacity 0.25
    pointer-events none
    &:hover
      opacity 0.25
      // do nothing
    &:active
      transform translateY(0px)
  &:active
    transform translateY(1px)
    box-shadow none
  &:hover
    opacity 1.0
    // border 2px solid #000
      
  -webkit-touch-callout none
  -webkit-user-select none
  -khtml-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none
